# Wazuh Configuration
WAZUH_REGISTRATION_PASSWORD=your_secure_password_here
WAZUH_REGISTRATION_CA=/path/to/ca.crt
WAZUH_REGISTRATION_CERT=/path/to/cert.crt
WAZUH_REGISTRATION_KEY=/path/to/key.key

# Elasticsearch Configuration
ELASTIC_PASSWORD=your_secure_elastic_password_here

# Vault Configuration
VAULT_ROOT_TOKEN=your_secure_vault_root_token_here

# ML Engine Configuration
MODEL_STORAGE_PATH=/app/models
LOG_LEVEL=INFO

# Security Configuration
TLS_ENABLED=true
TLS_CERT=/path/to/tls/cert.crt
TLS_KEY=/path/to/tls/key.key
TLS_CA=/path/to/tls/ca.crt

# Network Configuration
WAZUH_MANAGER_HOST=wazuh-manager
ELASTICSEARCH_HOST=elasticsearch
KIBANA_HOST=kibana
ML_ENGINE_HOST=ml-engine
VAULT_HOST=vault

# Performance Tuning
ELASTICSEARCH_HEAP_SIZE=2g
WAZUH_WORKERS=4
ML_ENGINE_WORKERS=2

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/path/to/backup/storage

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SERVER=smtp.example.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USER=alerts@example.com
ALERT_EMAIL_PASSWORD=your_email_password_here
ALERT_EMAIL_RECIPIENTS=admin@example.com

# API Configuration
API_ENABLED=true
API_PORT=55000
API_USERNAME=wazuh-api
API_PASSWORD=your_secure_api_password_here

# Log Retention
LOG_RETENTION_DAYS=90
ARCHIVE_ENABLED=true
ARCHIVE_PATH=/path/to/archive/storage 